extends layout

block content
    div(class="postBorder")
        p(class="pageHeader") Create an Account!
            form(id="signUp" method="post" action="/signup")
                label(for="firstName") First Name:&nbsp;
                br
                input(type="text" required name="firstName")
                br
                label(for="lastName") Last Name:&nbsp;
                br
                input(type="text" required name="lastName")
                br
                label(for="username") Username:&nbsp;
                br
                input(type="text" required name="username")
                br
                label(for="password") Password:&nbsp;
                br
                input(type="password"
                pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]{8,16}$"
                title="Must contain one number(0-9), one uppercase, one lowercase letter, a special character(!@#$%^&*), and a min length of 8 and max of 12."
                name="password")
                br
                label(for="email") Email:&nbsp;
                br
                input(type="email" required name="email")
                br
                label(for="location") Zip Code:&nbsp;
                br
                input(type="text" required name="location" pattern="^[0-9]{5}$" min="501" max="99950")
                br
                label(for="DOB") Date Of Birth:&nbsp;
                br
                input(type="date" required max="2007-12-31" min="1910-1-1" name="DOB")
                br
                br
                input(type="submit" class="btn")
