div(class="post")
    //- - console.log(post)
    div(class="postBody")
        h5 #{post.Category}
        if post.Image != null
            img(src='data:image/png;base64,'+post.Image class="postImage")
        p #{post.TextBody}
        h6 #{post.Username}


    div(class="postVote")
        p(id="ScoreUp"+post.PostID) üëç #{(post.Likes)}
        p(id="ScoreDown"+post.PostID) üëé #{(post.Dislikes)}
        if isMod
            p Report Count: #{post.Reports}
            form(id="RemovePost" method="post" action="/remove")
                input(type="hidden" name="id" value=post.PostID)
                input(type="hidden" name="dbID" value=post._id)
                input(type="submit" name="Vote" value="Remove Post")
        div(class="postButton" onclick="like("+post.PostID+")") üëç
        div(class="postButton"  onclick="dislike("+post.PostID+")") üëé
        div(class="postButton" onclick="report("+post.PostID+")" ) üö©
        a(href="/comment"+ "/?postID=" + post.PostID)
            div(class="postButton") üí¨


    div(class="postComments")
        ul
            each comment in comments
                if comment.PostID == post._id
                    li(class="commentPost") #{comment.UserID}: #{comment.CommentTextBody}
